<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true" android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="#84b8db"/> <!-- Selected color -->
            <stroke
                android:width="4dp"
                android:color="#333333"/> <!-- Bold border for selection -->
            <corners android:radius="8dp"/>
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#6a9fc9"/> <!-- Pressed color -->
            <stroke
                android:width="3dp"
                android:color="#222222"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="#9ec1d9"/> <!-- Default color -->
            <stroke
                android:width="2dp"
                android:color="#333333"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>
</selector>
