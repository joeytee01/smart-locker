<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    android:padding="16dp"
    tools:context=".PinEntryActivity">

    <!-- Existing content wrapped in a vertical LinearLayout -->
    <LinearLayout
        android:id="@+id/contentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="16dp">

            <!-- Left Section: Profile -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="start|center_vertical"
                android:paddingStart="8dp">

                <ImageView
                    android:id="@+id/profileIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/profile"
                    android:contentDescription="Profile Icon"/>

                <TextView
                    android:id="@+id/profileNameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="John Doe, Investigation Officer"
                    android:textColor="#4F607D"
                    android:textSize="14sp"
                    android:paddingStart="8dp"/>
            </LinearLayout>

            <!-- Centered Withdraw Header -->
            <TextView
                android:id="@+id/headerTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter PIN"
                android:textColor="#677BA0"
                android:textSize="22sp"
                android:textStyle="bold"/>

            <!-- Right Section: Date/Time -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end">

                <TextView
                    android:id="@+id/dateTimeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mon 23 Sep   09:00 AM"
                    android:textColor="#4F607D"
                    android:textSize="14sp"
                    android:paddingEnd="8dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/title"
            android:text="@string/pin_text"
            android:textSize="32sp"
            android:textColor="@color/text_blue"
            android:gravity="center"
            android:layout_marginBottom="24dp"/>

        <!-- PIN Entry Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center">

            <!-- PIN Display -->
            <TextView
                android:id="@+id/pinDisplay"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:background="#FFFFFF"
                android:gravity="center"
                android:textSize="32sp"
                android:textColor="@android:color/black"
                android:text=""
                android:layout_marginBottom="24dp"/>

            <!-- Number Pad -->
            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:rowCount="4"
                android:alignmentMode="alignMargins"
                android:columnOrderPreserved="false"
                android:layout_marginBottom="24dp">

                <!-- Row 1 -->
                <Button
                    android:id="@+id/btn1"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:text="1"
                    android:textSize="24sp"
                    android:background="@drawable/button_with_border"
                    android:textColor="@color/text_blue"
                    android:layout_margin="4dp"/>
                <Button
                    android:id="@+id/btn2"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:text="2"
                    android:textSize="24sp"
                    android:background="@drawable/button_with_border"
                    android:textColor="@color/text_blue"
                    android:layout_margin="4dp"/>
                <Button
                    android:id="@+id/btn3"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:text="3"
                    android:textSize="24sp"
                    android:background="@drawable/button_with_border"
                    android:textColor="@color/text_blue"
                    android:layout_margin="4dp"/>

                <!-- Row 2 -->
                <Button
                    android:id="@+id/btn4"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:text="4"
                    android:textSize="24sp"
                    android:background="@drawable/button_with_border"
                    android:textColor="@color/text_blue"
                    android:layout_margin="4dp"/>
                <Button
                    android:id="@+id/btn5"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:text="5"
                    android:textSize="24sp"
                    android:background="@drawable/button_with_border"
                    android:textColor="@color/text_blue"
                    android:layout_margin="4dp"/>
                <Button
                    android:id="@+id/btn6"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:text="6"
                    android:textSize="24sp"
                    android:background="@drawable/button_with_border"
                    android:textColor="@color/text_blue"
                    android:layout_margin="4dp"/>

                <!-- Row 3 -->
                <Button
                    android:id="@+id/btn7"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:text="7"
                    android:textSize="24sp"
                    android:background="@drawable/button_with_border"
                    android:textColor="@color/text_blue"
                    android:layout_margin="4dp"/>
                <Button
                    android:id="@+id/btn8"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:text="8"
                    android:textSize="24sp"
                    android:background="@drawable/button_with_border"
                    android:textColor="@color/text_blue"
                    android:layout_margin="4dp"/>
                <Button
                    android:id="@+id/btn9"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:text="9"
                    android:textSize="24sp"
                    android:background="@drawable/button_with_border"
                    android:textColor="@color/text_blue"
                    android:layout_margin="4dp"/>

                <!-- Row 4 -->
                <Button
                    android:id="@+id/btnClear"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:text="CLEAR"
                    android:textSize="18sp"
                    android:background="@drawable/button_with_border"
                    android:textColor="@color/text_blue"
                    android:layout_margin="4dp"/>
                <Button
                    android:id="@+id/btn0"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:text="0"
                    android:textSize="24sp"
                    android:background="@drawable/button_with_border"
                    android:textColor="@color/text_blue"
                    android:layout_margin="4dp"/>
                <Button
                    android:id="@+id/btnBack"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:text="âŒ«"
                    android:textSize="24sp"
                    android:background="@drawable/button_with_border"
                    android:textColor="@color/text_blue"
                    android:layout_margin="4dp"/>
            </GridLayout>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <Button
                    android:id="@+id/cancelButton"
                    android:layout_width="280dp"
                    android:layout_height="80dp"
                    android:text="Cancel"
                    android:background="@drawable/button_with_border"
                    android:textColor="@color/text_blue"
                    android:textSize="24sp"
                    android:layout_marginEnd="16dp"/>
                <Button
                    android:id="@+id/nextButton"
                    android:layout_width="280dp"
                    android:layout_height="80dp"
                    android:text="Next"
                    android:backgroundTint="@color/button_blue"
                    android:textColor="@android:color/white"
                    android:textSize="24sp"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <!-- Timer TextView at the bottom right corner -->
    <TextView
        android:id="@+id/timerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="19:50 remaining"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:padding="16dp"/>

</RelativeLayout>
