<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_with_png_phone"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WI-RE"
        android:textColor="#00205B"
        android:textSize="36sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="MHA Police Locker Management"
        android:textColor="#00205B"
        android:textSize="18sp" />

    <!-- Replace Button with MaterialButton to get rounded corners -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/scanButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:backgroundTint="@color/button_blue"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:text="Scan QR code to begin"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        app:cornerRadius="16dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/leftIcon"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/logo_left"/>

        <ImageView
            android:id="@+id/rightIcon"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/logo_right" />
    </LinearLayout>
</LinearLayout>
