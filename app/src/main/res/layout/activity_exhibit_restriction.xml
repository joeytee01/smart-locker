<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/background_gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="16dp">

        <!-- Left Section: Profile -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="start|center_vertical"
            android:paddingStart="8dp">

            <ImageView
                android:id="@+id/profileIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/profile"
                android:contentDescription="Profile Icon"
                />

            <TextView
                android:id="@+id/profileNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="John Doe, Investigation Officer"
                android:textColor="#4F607D"
                android:textSize="14sp"
                android:paddingStart="8dp"/>
        </LinearLayout>

        <!-- Centered Withdraw Header -->
        <TextView
            android:id="@+id/headerTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Withdraw"
            android:textColor="#677BA0"
            android:textSize="22sp"
            android:textStyle="bold"/>

        <!-- Right Section: Date/Time -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end">

            <TextView
                android:id="@+id/dateTimeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mon 23 Sep   09:00 AM"
                android:textColor="#4F607D"
                android:textSize="14sp"
                android:paddingEnd="8dp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Instruction Text -->
    <TextView
        android:id="@+id/instructionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="@string/restriction_message"
        android:textSize="35sp"
        android:textColor="@color/text_blue"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingBottom="16dp"/>

    <!-- RecyclerView with horizontal scrolling, centered -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"/>
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

    <!-- Continue Button -->
    <Button
        android:id="@+id/continueButton"
        android:layout_width="280dp"
        android:layout_height="80dp"
        android:text="Continue"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/button_blue"
        android:layout_marginTop="16dp"
        android:textSize="24sp"
        android:padding="12dp"
        android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/timerTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="50dp"
            android:paddingEnd="16dp"
            android:text="19:50 remaining"
            android:textColor="@android:color/black"
            android:textSize="18sp" />
    </RelativeLayout>
</LinearLayout>
