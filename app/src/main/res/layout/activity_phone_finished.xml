<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_with_png_phone"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Success Message -->
    <TextView
        android:id="@+id/successMessageSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pictures uploaded successfully."
        android:textAlignment="center"
        android:textColor="#00205B"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/successMessageLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Please continue on tablet."
        android:textAlignment="center"
        android:textColor="#00205B"
        android:textSize="36sp"
        android:textStyle="bold" />

    <!-- Logos Section -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/leftIcon"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/logo_left" />

        <ImageView
            android:id="@+id/rightIcon"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/logo_right" />
    </LinearLayout>

</LinearLayout>
