<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="900dp"
    android:layout_height="600dp"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF"
    android:elevation="8dp">

    <!-- Title -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scan this QR using the mobile phone provided"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@color/text_blue"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"/>

    <!-- Image Container -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="12dp">

        <!-- Left Image -->
        <ImageView
            android:id="@+id/leftQrImage"
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:layout_marginRight="50dp"
            android:src="@drawable/scan_qr"
            android:contentDescription="QR Code 1"
            android:scaleType="fitCenter"/>

        <!-- Right Image -->
        <ImageView
            android:id="@+id/rightQrImage"
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:layout_marginLeft="50dp"
            android:src="@drawable/qr"
            android:contentDescription="QR Code 2"
            android:scaleType="fitCenter"/>
    </LinearLayout>

    <!-- Button Container -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center_horizontal">

        <!-- Scan Confirmation Button -->
        <Button
            android:id="@+id/btnConfirmScan"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:text="I have scanned the QR code"
            android:textSize="22sp"
            android:backgroundTint="@color/button_blue"
            android:textColor="@android:color/white"
            android:layout_marginBottom="6dp"/>

        <!-- Back Button -->
        <Button
            android:id="@+id/btnBack"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:text="Back"
            android:textSize="22sp"
            android:background="@drawable/button_with_border"
            android:textColor="@color/text_blue"/>
    </LinearLayout>

</LinearLayout>
